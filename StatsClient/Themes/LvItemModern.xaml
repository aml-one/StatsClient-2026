                        </Trigger>

                        <DataTrigger Binding="{Binding ReasonIsDead}"
                                     Value="">
                            <Setter TargetName="Item"
                                    Property="Background"
                                    Value="#12FFFFFF" />
                        </DataTrigger>
                        
                        <DataTrigger Binding="{Binding Source}"
                                     Value="Archives">
                            <Setter TargetName="Item"
                                    Property="Background"
                                    Value="#12fcff54" />
                        </DataTrigger>



