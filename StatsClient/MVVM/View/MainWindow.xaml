<Window x:Class="StatsClient.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:StatsClient.MVVM.ViewModel"
        xmlns:core="clr-namespace:StatsClient.MVVM.Core"
        xmlns:converter="clr-namespace:StatsClient.MVVM.Converters"
        xmlns:localView="clr-namespace:StatsClient.MVVM.View"
        xmlns:uc="clr-namespace:StatsClient.UserControls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:sf="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        WindowState="Normal"
        AllowsTransparency="True"
        Foreground="Black"
        Closing="Window_Closing"
        LocationChanged="Window_LocationChanged"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged"
        Title="Stats 2026"
        d:Height="850"
        d:Width="1520"
        Height="1080"
        Width="1920"
        MinHeight="750"
        MinWidth="1520"
        Icon="/Images/stats_2025_Q512.png">



    <Window.DataContext>
        <viewmodel:MainViewModel />
    </Window.DataContext>

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="5,5,5,5"
                      CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ScrollBar.xaml" />
                <ResourceDictionary Source="/Themes/TabControlStyles.xaml" />
                <ResourceDictionary Source="/Themes/CircleCheckBox.xaml" />
                <ResourceDictionary Source="/Themes/LvItemModern.xaml" />
                <ResourceDictionary Source="/Themes/ControlStyles.xaml" />
                <ResourceDictionary Source="/Themes/SearchBoxTitleBar.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BeginStoryboard x:Key="ProgramIconShrinkAnimation">
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="programIcon"
                                     Storyboard.TargetProperty="(Width)"
                                     Duration="0:0:1.5"
                                     From="25"
                                     To="5" />
                </Storyboard>
            </BeginStoryboard>

            <BeginStoryboard x:Key="ProgramIconGrowAnimation">
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="programIcon"
                                     Storyboard.TargetProperty="(Width)"
                                     Duration="0:0:1"
                                     From="5"
                                     To="25" />
                </Storyboard>
            </BeginStoryboard>


            <BeginStoryboard x:Key="ZipArchiveIconGrowAnimation">
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="zipArchiveIcon"
                                     Storyboard.TargetProperty="(Width)"
                                     Duration="0:0:0.6"
                                     From="0"
                                     To="512" />
                </Storyboard>
            </BeginStoryboard>

            <BeginStoryboard x:Key="ZipArchiveIconShrinkAnimation">
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="zipArchiveIcon"
                                     Storyboard.TargetProperty="(Width)"
                                     Duration="0:0:0.5"
                                     From="512"
                                     To="0" />
                </Storyboard>
            </BeginStoryboard>

            <converter:InverseVisibilityConverter x:Key="InverseVisibilityConverter" />
            <converter:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converter:RemoveIDTagFromFrontConverter x:Key="RemoveIDTagFromFrontConverter" />

            <converter:EmptyToCollapsedConverter x:Key="EmptyToCollapsedConverter" />
            <converter:EmptyTextToCollapsedConverter x:Key="EmptyTextToCollapsedConverter" />
            <converter:EmptyToHiddenConverter x:Key="EmptyToHiddenConverter" />
            <converter:EmptyToVisibleConverter x:Key="EmptyToVisibleConverter" />
            <converter:EqualToHiddenConverter x:Key="EqualToHiddenConverter" />
            <converter:StringToImageConverter x:Key="StringToImageConverter" />
            <converter:ZeroToVisibleConverter x:Key="ZeroToVisibleConverter" />
            <converter:ZeroToCollapsedConverter x:Key="ZeroToCollapsedConverter" />
            <converter:ZeroToHiddenConverter x:Key="ZeroToHiddenConverter" />
            <converter:LessThan50ToHiddenConverter x:Key="LessThan50ToHiddenConverter" />
            <converter:ZeroToCollapsedVisibilityConverter x:Key="ZeroToCollapsedVisibilityConverter" />
            <converter:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <converter:ZeroToFalseConverter x:Key="ZeroToFalseConverter" />
            <converter:MyRecentToFalseConverter x:Key="MyRecentToFalseConverter" />
            <converter:AddPlus1toNumberConverter x:Key="AddPlus1toNumberConverter" />
            <converter:ArchivesCountTextToCornerRadiusConverter x:Key="ArchivesCountTextToCornerRadiusConverter" />


            <Style x:Key="HiddenHeaderStyle"
                   TargetType="{x:Type GridViewColumnHeader}">
                <Setter Property="Visibility"
                        Value="Collapsed" />
            </Style>


            <ControlTemplate x:Key="CustomHeader"
                             TargetType="GridViewColumnHeader">
                <Border BorderBrush="#888"
                        Background="#F1DC86"
                        BorderThickness="0,0,0,1">

                    <Grid Background="#F1DC86"
                          Height="20"
                          Margin="-2,0,0,0">
                        <TextBlock Background="#F1DC86"
                                   Foreground="Black"
                                   FontWeight="SemiBold"
                                   Text="{TemplateBinding Tag}"
                                   VerticalAlignment="Center" />
                        <Thumb x:Name="PART_HeaderGripper"
                               HorizontalAlignment="Right"
                               Margin="0"
                               Width="1" />
                    </Grid>
                </Border>
            </ControlTemplate>

            <Style TargetType="{x:Type GridViewColumnHeader}">
                <Setter Property="Foreground"
                        Value="Black" />
                <Setter Property="Background"
                        Value="#E8E8E8" />
                <Setter Property="FontWeight"
                        Value="Normal" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver"
                             Value="True">
                        <Setter Property="Foreground"
                                Value="Black" />
                        <Setter Property="Background"
                                Value="#DDD" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <ControlTemplate x:Key="CustomHeaderPendingDigi"
                             TargetType="GridViewColumnHeader">
                <Grid Background="#888"
                      Height="20"
                      Margin="-2,0,0,0">
                    <TextBlock Background="#888"
                               Foreground="Beige"
                               Text="{TemplateBinding Tag}"
                               VerticalAlignment="Center" />
                    <Thumb x:Name="PART_HeaderGripper"
                           HorizontalAlignment="Right"
                           Margin="0"
                           Width="1" />
                </Grid>
            </ControlTemplate>

        </ResourceDictionary>
    </Window.Resources>

    <Window.Background>
        <SolidColorBrush Opacity="{Binding CbSettingGlassyEffect, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToOpacityConverter}}" />
    </Window.Background>

    <Border CornerRadius="8,8,4,8"
            BorderThickness="0.5"
            BorderBrush="Black"
            Background="{Binding WindowBackground}"
            d:Background="#d1ccb8"
            Opacity="{Binding CbSettingGlassyEffect, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToOpacityConverter}}"
            ClipToBounds="True">
        <Grid Margin="4,0,4,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0" />
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <localView:MainMenu Panel.ZIndex="200"
                                Grid.ColumnSpan="2"
                                Grid.RowSpan="3"
                                Visibility="{Binding DataContext.MainMenuOpen, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"
                                d:Visibility="Hidden"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="3,150,0,35" />



            <!--#region TITLEBAR-->

            <Border Background="#e6c235"
                    Grid.Column="0"
                    Grid.RowSpan="3"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    CornerRadius="0,8,0,5"
                    Margin="-5,0,0,-1"
                    BorderThickness="1"
                    BorderBrush="#888"
                    Panel.ZIndex="200"
                    Visibility="{Binding HomeButtonShows}"
                    d:Visibility="Visible">
                <Grid>

                    <Rectangle Width="90"
                               Height="54" />
                    <Button x:Name="btnHome2"
                            Content="↩"
                            Width="80"
                            Height="54"
                            Margin="0,0,0,0"
                            FontSize="36"
                            Panel.ZIndex="201"
                            Foreground="White"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            IsTabStop="False"
                            Cursor="Hand"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Button x:Name="Border"
                                                    BorderBrush="Transparent"
                                                    Foreground="Black"
                                                    Background="{TemplateBinding Background}"
                                                    Command="{Binding SwitchToHomeTabCommand}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                            </Button>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="FontSize"
                                                            Value="40"
                                                            TargetName="Border" />

                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock Text="HOME"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               FontSize="10"
                               FontWeight="Bold"
                               Margin="32,0,0,6" />
                </Grid>
                <Border.BitmapEffect>
                    <DropShadowBitmapEffect Color="#888"
                                            Direction="270"
                                            ShadowDepth="1"
                                            Opacity="0.55"
                                            Softness="2" />
                </Border.BitmapEffect>
            </Border>



            <Border Grid.Column="0"
                    Grid.RowSpan="3"
                    CornerRadius="6,0,0,6"
                    Margin="-4,0,0,0"
                    Background="#c9bf97">

                <DockPanel LastChildFill="True"
                           Margin="0,0,0,0">




                    <Button x:Name="btnMaximize"
                            Content="▣"
                            Tag="⧉"
                            Width="40"
                            Height="35"
                            FontSize="14"
                            Padding="0,5,0,0"
                            DockPanel.Dock="Top"
                            Margin="-1,0,0,0"
                            Panel.ZIndex="50"
                            Foreground="Black"
                            Background="Transparent"
                            BorderThickness="0"
                            IsTabStop="False"
                            Click="BtnMaximize_Click">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="10,0,0,0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#76797F"
                                                            TargetName="Border" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="btnMinimize"
                            Content="▪"
                            DockPanel.Dock="Top"
                            Width="40"
                            Height="35"
                            FontSize="16"
                            Panel.ZIndex="50"
                            Margin="-1,0,0,0"
                            Foreground="Black"
                            Background="Transparent"
                            BorderThickness="0"
                            IsTabStop="False"
                            Click="BtnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#76797F"
                                                            TargetName="Border" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnCloseApplication"
                            Content="╳"
                            DockPanel.Dock="Top"
                            Width="40"
                            Height="35"
                            FontSize="12"
                            Panel.ZIndex="50"
                            Margin="-1,0,0,0"
                            Foreground="Black"
                            Background="Transparent"
                            BorderThickness="0"
                            IsTabStop="False"
                            Click="BtnCloseApplication_Click">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#de766b"
                                                            TargetName="Border" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>


                    <Button x:Name="btnHome"
                            Content="⌂"
                            Width="40"
                            Height="35"
                            FontSize="14"
                            Padding="0,5,0,0"
                            DockPanel.Dock="Top"
                            Margin="-1,0,0,0"
                            Panel.ZIndex="50"
                            Foreground="Black"
                            Background="Transparent"
                            BorderThickness="0"
                            IsTabStop="False"
                            Command="{Binding SwitchToHomeTabCommand}">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="0,0,0,0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#76797F"
                                                            TargetName="Border" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnMenu"
                            Content="≡"
                            Width="40"
                            Height="35"
                            FontSize="14"
                            Padding="0,5,0,0"
                            DockPanel.Dock="Top"
                            Margin="-1,0,0,0"
                            Panel.ZIndex="50"
                            Foreground="Black"
                            Background="Transparent"
                            BorderThickness="0"
                            IsTabStop="False"
                            Command="{Binding OpenCloseMenuCommand}">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background"
                                        Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="0,0,0,0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#76797F"
                                                            TargetName="Border" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!--#region DESIGNER OPEN ICONS DISPLAY -->
                    <DockPanel Background="Transparent"
                               Panel.ZIndex="10"
                               Margin="0,10,0,0"
                               VerticalAlignment="Top"
                               DockPanel.Dock="Top"
                               PreviewMouseDown="TitleBar_PreviewMouseDown">
                        <StackPanel Orientation="Vertical"
                                    x:Name="panelDesignerOpen"
                                    DockPanel.Dock="Left"
                                    Margin="0,0,0,0">
                            <Image Source="/Images/ListViewIcons/psModelling.png"
                                   Height="16"
                                   ToolTip="{Binding DesignerOpenToolTip, StringFormat='\{0} case is opened for design'}"
                                   Visibility="{Binding DesignerOpen, Converter={StaticResource BoolToVisibilityConverter}}"
                                   d:Visibility="Visible">
                                <Image.BitmapEffect>
                                    <DropShadowBitmapEffect Color="#1B1904"
                                                            Direction="270"
                                                            ShadowDepth="1"
                                                            Opacity="0.55"
                                                            Softness="2" />
                                </Image.BitmapEffect>
                            </Image>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDown">
                                    <i:InvokeCommandAction Command="{Binding JumpToCasesOpenedForDesignNowCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </StackPanel>
                    </DockPanel>
                    <!--#endregion DESIGNER OPEN ICONS DISPLAY -->

                    <Grid DockPanel.Dock="Bottom"
                          Background="Transparent"
                          Margin="0,0,0,0"
                          PreviewMouseDown="TitleBar_PreviewMouseDown">
                        <Grid Height="39"
                              DockPanel.Dock="Bottom"
                              Margin="0,0,0,54">
                            <Image Source="/Images/stats_2025_Q512.png"
                                   Height="25"
                                   x:Name="programIcon"
                                   DockPanel.Dock="Bottom"
                                   Visibility="{Binding HomeButtonShows}"
                                   d:Visibility="Visible"
                                   Margin="5,5,5,9">
                                <!--i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDown">
                                    <i:InvokeCommandAction Command="{Binding OpenCloseMenuCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers-->
                            </Image>
                        </Grid>
                    </Grid>


                    <Border x:Name="TitleBar"
                            Background="Transparent"
                            HorizontalAlignment="Stretch"
                            CornerRadius="0,0,0,0"
                            DockPanel.Dock="Top"
                            PreviewMouseDown="TitleBar_PreviewMouseDown">

                        <Grid Visibility="{Binding HomeButtonShows}"
                              d:Visibility="Visible">


                            <DockPanel LastChildFill="False">
                                <core:OutlinedTextBlock Stroke="WhiteSmoke"
                                                        StrokePosition="Outside"
                                                        FontSize="24"
                                                        FontWeight="SemiBold"
                                                        Fill="#333"
                                                        StrokeThickness="1"
                                                        Text="Stats 2026"
                                                        VerticalAlignment="Bottom"
                                                        Margin="2,0,0,0">
                                    <core:OutlinedTextBlock.LayoutTransform>
                                        <RotateTransform Angle="270" />
                                    </core:OutlinedTextBlock.LayoutTransform>
                                </core:OutlinedTextBlock>

                            </DockPanel>
                            <TextBlock Text="{Binding SoftwareVersion, StringFormat='v\{0}'}"
                                       d:Text="v1"
                                       Margin="0,0,0,120"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Foreground="IndianRed"
                                       Panel.ZIndex="-1"
                                       FontSize="14" />
                        </Grid>
                    </Border>


                </DockPanel>

            </Border>
            <!--#endregion END OF TITLEBAR -->

            <!--#region MAIN AREA -->









            <core:TabControlX Grid.Row="1"
                        Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="1,0,0,1"
                        BorderBrush="#777"
                        Style="{StaticResource hiddenTabsTabControlForMainTabControl}"
                        d:Margin="0,0,0,0"
                        Margin="0,2,0,0"
                        TabStripPlacement="Bottom"
                        IsTabStop="False"
                        d:TabStripPlacement="Top"
                        x:Name="mainTabControl"
                        SelectionChanged="TabControl_SelectionChanged">


                <!--#region HOME TAB -->
                <TabItem Header="Home"
                         IsTabStop="False"
                         Style="{StaticResource hiddenTabsTabControlForMainTabControlTabItemStyle}"
                         x:Name="HomeTab">
                    
                        
                    <Grid Margin="0,10,0,4"
                          Background="#01FFFFFF">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction Command="{Binding ResetQuickSearchOnHomeTabCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        
                        <Grid VerticalAlignment="Top"
                              Margin="0,82,0,0"
                              MaxHeight="610"
                              Grid.RowSpan="3"
                              Panel.ZIndex="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="369*" />
                                <ColumnDefinition Width="665*" />
                                <ColumnDefinition Width="73*" />
                                <ColumnDefinition Width="369*" />
                            </Grid.ColumnDefinitions>

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDown">
                                    <i:InvokeCommandAction Command="{Binding ResetQuickSearchOnHomeTabCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <Grid Grid.Column="1"
                                  Grid.ColumnSpan="2"
                                  d:Visibility="Visible"
                                  Visibility="{Binding GlobalSearchResult.Count, Converter={StaticResource ZeroToCollapsedConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <ListView ItemsSource="{Binding GlobalSearchResult}"
                                          ItemContainerStyle="{StaticResource LvItemGlobalSearch}"
                                          SelectedItem="{Binding SelectedGlobalSearchResult}"
                                          ScrollViewer.CanContentScroll="False"
                                          Padding="0"
                                          Grid.Row="1"
                                          d:Height="60" />

                                <StackPanel Orientation="Horizontal"
                                            Grid.Row="0">
                                    <TextBlock Text="{Binding GlobalSearchResult.Count}"
                                               d:Text="0"
                                               Margin="0,2,0,0"
                                               Foreground="#666" />
                                    <TextBlock Text=" orders listed"
                                               Margin="0,2,0,0"
                                               Foreground="#666" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            Grid.Row="0"
                                            HorizontalAlignment="Right">
                                    <Button Content="  &lt;  "
                                            d:Visibility="Visible"
                                            Visibility="{Binding ArchiveResultOffset, Converter={StaticResource ZeroToHiddenConverter}}"
                                            Command="{Binding Previous50ResultOnArchivesSearchCommand}" />
                                    <Button Content="  &gt;  "
                                            d:Visibility="Visible"
                                            Visibility="{Binding ResultInArchives, Converter={StaticResource LessThan50ToHiddenConverter}}"
                                            Command="{Binding Next50ResultOnArchivesSearchCommand}" />
                                    <TextBlock Text="Archives page:"
                                               Margin="10,2,0,0"
                                               Foreground="#666" />
                                    <TextBlock Text="{Binding ArchiveResultOffset, Converter={StaticResource AddPlus1toNumberConverter}}"
                                               d:Text="3"
                                               Margin="0,2,0,0"
                                               Padding="5,0"
                                               Foreground="Black" />
                                </StackPanel>
                            </Grid>
                        </Grid>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="1"
                                    Margin="0,0,0,5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom">

                            <TextBlock Text="Counted results:"
                                       Foreground="#888"
                                       Margin="0,0,5,0" />
                            <TextBlock Text="{Binding CountedResultsInt}"
                                       d:Text="1"
                                       FontSize="12"
                                       Foreground="#666" />
                        </StackPanel>

                        <!--#region UPDATE AVAILABLE AND DEBUG MESSAGES COUNT DISPLAY -->
                        <DockPanel Grid.Row="0"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Right"
                                   Margin="0,-10,10,0"
                                   Panel.ZIndex="50"
                                   Width="220"
                                   LastChildFill="False"
                                   Height="32">



                            <Grid Visibility="{Binding CbSettingModuleDebug, Converter={StaticResource BoolToVisibilityConverter}}"
                                  d:Visibility="Visible"
                                  DockPanel.Dock="Right">

