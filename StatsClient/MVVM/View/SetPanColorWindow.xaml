<Window x:Class="StatsClient.MVVM.View.SetPanColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatsClient.MVVM.View"
        xmlns:viewmodel="clr-namespace:StatsClient.MVVM.ViewModel"
        xmlns:converter="clr-namespace:StatsClient.MVVM.Converters"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Set Pan Color"
        Height="320"
        Width="150"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowState="Normal"
        Topmost="True"
        AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="Transparent"
        Foreground="Black">

    <Window.DataContext>
        <viewmodel:SetPanColorViewModel />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ScrollBar.xaml" />
                <ResourceDictionary Source="/Themes/LvItemModern.xaml" />
                <ResourceDictionary Source="/Themes/ModernColorScheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converter:DarkColorBoolToColorConverter x:Key="DarkColorBoolToColorConverter" />
        </ResourceDictionary>
    </Window.Resources>


    <Border CornerRadius="8,8,4,8"
            BorderThickness="0.5"
            BorderBrush="Black"
            Background="{DynamicResource PrimaryDarkColor}"
            ClipToBounds="True">
        <Border CornerRadius="4"
                BorderThickness="0.5"
                Margin="5"
                BorderBrush="Black"
                Background="{DynamicResource PrimaryColor}"
                ClipToBounds="True">
            <Grid Margin="4">
                <TextBlock Text="╳"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Cursor="Hand"
                           Margin="0,0,0,0"
                           Panel.ZIndex="50"
                           FontSize="10">
                 <i:Interaction.Triggers>
                     <i:EventTrigger EventName="MouseDown">
                         <i:InvokeCommandAction Command="{Binding CloseWindowCommand}" />
                     </i:EventTrigger>
                 </i:Interaction.Triggers>
                </TextBlock>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding WindowTitle}"
                               d:Text="Pick the new color:"
                               Grid.Row="0"
                               Foreground="Black"
                               Margin="4,0,0,0"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Left"/>
                    
                    <ListView Background="Transparent"
                              BorderThickness="0"
                              Grid.Row="1"
                              ItemsSource="{Binding AvailablePanColors}"
                              ItemContainerStyle="{StaticResource LvItemPanColors}" />

                    <DockPanel HorizontalAlignment="Stretch"
                               Margin="0,0,14,0" 
                               Grid.Row="2">
                        <TextBlock Text="Pan number:"
                                   Foreground="Black"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left" />
                        
                        <TextBlock Text="{Binding PanNumber}"
                                   d:Text="8008"
                                   d:Foreground="Black"
                                   Foreground="{Binding IsItDarkColor, Converter={StaticResource DarkColorBoolToColorConverter}}"
                                   Background="{Binding OriginalColor}"
                                   FontSize="14"
                                   Padding="4,2"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right" />

                    </DockPanel>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
