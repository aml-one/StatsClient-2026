<Window x:Class="StatsClient.MVVM.View.ImagePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:StatsClient.UserControls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:view="clr-namespace:StatsClient.MVVM.View"
        mc:Ignorable="d"
        Title="ImagePreviewWindow"
        Height="450"
        Width="800"
        MinHeight="300"
        MinWidth="300"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        WindowState="Normal"
        WindowStartupLocation="CenterOwner">

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="0,0,5,5"
                      CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ModernColorScheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="8,8,4,8"
            BorderThickness="0.5"
            BorderBrush="Black"
            Background="{DynamicResource PrimaryDarkColor}"
            ClipToBounds="True">
        <Border CornerRadius="8,8,8,8"
                BorderThickness="0.5"
                Margin="10"
                BorderBrush="Black"
                Background="{DynamicResource PrimaryColor}"
                ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="403*" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Panel.ZIndex="50">
                    <TextBlock Text="ESC"
                               Foreground="Black"
                               Opacity="0.55"
                               VerticalAlignment="Center"
                               Padding="0,0,5,0" />
                    <TextBlock Text="╳"
                               Cursor="Hand"
                               ToolTip="Close window"
                               Foreground="Black"
                               Margin="0,-3,0,0"
                               FontSize="16">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction Command="{Binding CloseWindowCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBlock>
                </StackPanel>

                <Grid Background="{DynamicResource PrimaryDarkColor}"
                      Margin="-1,-1,-1,1"
                      PreviewMouseDown="TitleBar_PreviewMouseDown">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="File: "
                                   Foreground="Black"
                                   VerticalAlignment="Top"
                                   Margin="5,0,0,0"
                                   Opacity="0.55" />
                        <TextBlock Text="{Binding FileName}"
                                   d:Text="name"
                                   VerticalAlignment="Top"
                                   Foreground="Black" />
                    </StackPanel>
                </Grid>
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Bottom"
                            Panel.ZIndex="3"
                            Margin="10,350,5,10">
                    <TextBlock Text="Zoom: Mouse wheel"
                               Foreground="{DynamicResource BlackColor}" />
                    <TextBlock Text="Pan: Mouse right"
                               Foreground="{DynamicResource BlackColor}" />
                    <TextBlock Text="Close: ESC or Mouse left double click"
                               Foreground="Black" />

                </StackPanel>
                <uc:ImageViewControl x:Name="image"
                                     Panel.ZIndex="2"
                                     MouseLeftButtonDown="Image_MouseLeftButtonDown"
                                     Grid.Row="1">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding CloseWindowCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </uc:ImageViewControl>
            </Grid>
        </Border>
    </Border>
</Window>
