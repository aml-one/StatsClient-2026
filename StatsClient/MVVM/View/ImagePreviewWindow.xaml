<Window x:Class="StatsClient.MVVM.View.ImagePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:StatsClient.UserControls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:view="clr-namespace:StatsClient.MVVM.View"
        mc:Ignorable="d"
        Title="ImagePreviewWindow" 
        Height="450" 
        Width="800"
        MinHeight="300"
        MinWidth="300"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        WindowState="Normal"
        WindowStartupLocation="CenterOwner">

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="0,0,5,5"
                      CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    

    <Border CornerRadius="8,8,4,8"
            BorderThickness="0.5"
            BorderBrush="Black"
            Background="#46494F"
            ClipToBounds="True">
        <Border CornerRadius="8,8,8,8"
                BorderThickness="0.5"
                Margin="10"
                BorderBrush="Black"
                Background="#888"
                ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Panel.ZIndex="50">
                    <TextBlock Text="ESC" 
                               Foreground="Black"
                               Opacity="0.55"
                               VerticalAlignment="Center"
                               Padding="0,0,5,0"/>
                    <TextBlock Text="╳"
                               Cursor="Hand"
                               ToolTip="Close window"
                               Foreground="Black"
                               Margin="0,-3,0,0"
                               FontSize="16">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction Command="{Binding CloseWindowCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBlock>
                </StackPanel>

                <Grid Background="#46494F"
                      Margin="-1,-1,-1,1"
                      PreviewMouseDown="TitleBar_PreviewMouseDown">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="File: " 
                                   Foreground="Black"
                                   Opacity="0.55"/>
                        <TextBlock Text="{Binding FileName}"
                                   d:Text="name"
                                   Foreground="Black" />
                    </StackPanel>
                </Grid>
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Bottom"
                            Panel.ZIndex="3"
                            Margin="5">
                    <TextBlock Text="Zoom: Mouse wheel"
                               Foreground="Silver" />
                    <TextBlock Text="Pan: Mouse right"
                               Foreground="Silver" />
                    <TextBlock Text="Close: ESC"
                               Foreground="Silver" />

                </StackPanel>
                <uc:ImageViewControl x:Name="image"
                                     Panel.ZIndex="2"
                                     Grid.Row="1" />
            </Grid>
        </Border>
    </Border>
</Window>
