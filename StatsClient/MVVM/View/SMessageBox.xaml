<Window x:Class="StatsClient.MVVM.View.SMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:StatsClient.MVVM.ViewModel"
        xmlns:core="clr-namespace:StatsClient.MVVM.Core"
        xmlns:converter="clr-namespace:StatsClient.MVVM.Converters"
        xmlns:localView="clr-namespace:StatsClient.MVVM.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Stats Client"
        Height="150"
        Width="400"
        MinHeight="150"
        MinWidth="400"
        MaxWidth="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowState="Normal"
        Loaded="Window_Loaded"
        AllowsTransparency="True"
        Foreground="Black">

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="5,5,5,5"
                      CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Background>
        <SolidColorBrush Opacity="0.95" />
    </Window.Background>

    <Border CornerRadius="8,8,4,8"
            BorderThickness="0.5"
            BorderBrush="Black"
            Background="#FFF"
            Opacity="0.95"
            ClipToBounds="True">

        <Grid>
            <Ellipse Fill="Green"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Width="4000"
                     Height="80"
                     Panel.ZIndex="1"
                     Opacity="0.60"
                     Margin="-50,0"
                     RenderTransformOrigin="0.5, 0.5">
                <Ellipse.RenderTransform>
                    <RotateTransform x:Name="noFreeze"
                                     Angle="0" />
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)"
                                                 To="360"
                                                 Duration="0:0:6"
                                                 RepeatBehavior="Forever" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
            <Border CornerRadius="8,8,4,8"
                    BorderThickness="0.65"
                    BorderBrush="Black"
                    Panel.ZIndex="10"
                    Opacity="1"
                    Margin="4"
                    ClipToBounds="True">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0.5"
                                         EndPoint="1,0.5">
                        <GradientStop Color="#C6C9CF"
                                      Offset="0.0" />
                        
                        <GradientStop Color="#B6B9BF"
                                      Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Image Source="{Binding SMessageBoxIcon}"
                           d:Source="/Images/MessageIcons/Info.png"
                           Width="250"
                           Height="250"
                           Panel.ZIndex="0"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Opacity="0.15"
                           Margin="-80,-40,0,-80" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="26" />
                            <RowDefinition />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>



                        <Border Grid.Row="0"
                                Background="Transparent"
                                BorderBrush="#666"
                                CornerRadius="8,8,0,0"
                                ClipToBounds="True"
                                Cursor="Hand"
                                BorderThickness="0,0,0,1"
                                PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown">
                            <DockPanel>
                                <Image Source="{Binding SMessageBoxIcon}"
                                       d:Source="/Images/MessageIcons/Info.png"
                                       Width="28"
                                       Height="28"
                                       Margin="-2,-2,-2,0"
                                       ClipToBounds="True"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left" />
                                <TextBlock Text="{Binding SMessageTitle}"
                                           d:Text="Message Title"
                                           FontWeight="SemiBold"
                                           Foreground="Black"
                                           Padding="2,2"
                                           Margin="0,0,0,0"
                                           FontSize="14"
                                           TextTrimming="CharacterEllipsis" />

                                <TextBlock d:Text="113"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Foreground="#333"
                                           FontSize="10"
                                           x:Name="countDownTimer"
                                           Margin="6,0" />
                            </DockPanel>
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Message body Lorem Ipsum is simply dummy text of the printing and typesetting industry. "
                                       Grid.Column="1"
                                       VerticalAlignment="Center"
                                       Padding="26,4,6,4"
                                       TextWrapping="Wrap"
                                       Foreground="#000"
                                       FontSize="15"
                                       Visibility="Collapsed"
                                       d:Visibility="Visible"
                                       FontFamily="Arial" />

                            <core:OutlinedTextBlock Stroke="#777"
                                                    StrokePosition="Outside"
                                                    FontSize="15"
                                                    FontFamily="Arial"
                                                    VerticalAlignment="Center"
                                                    TextWrapping="Wrap"
                                                    FontWeight="Normal"
                                                    Fill="#111"
                                                    StrokeThickness="0.35"
                                                    Margin="26,4,6,4"
                                                    Grid.Column="1"
                                                    Text="{Binding SMessageBody}" />
                        </Grid>



                        <Grid Grid.Row="2"
                              Margin="4,0"
                              Height="34"
                              VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>



                            <Button Content="{Binding SMessageButtonLeftContent}"
                                    d:Content="Yes"
                                    Visibility="{Binding SMessageButtonLeftVisibility}"
                                    d:Visibility="Visible"
                                    Command="{Binding SMessageButtonClickCommand}"
                                    CommandParameter="{Binding ElementName=xLeftButton, Path=Content}"
                                    Grid.Column="1"
                                    x:Name="xLeftButton"
                                    Margin="4,8,4,0"
                                    Width="150" />

                            <Button Content="{Binding SMessageButtonRightContent}"
                                    d:Content="No"
                                    Visibility="{Binding SMessageButtonRightVisibility}"
                                    d:Visibility="Visible"
                                    Command="{Binding SMessageButtonClickCommand}"
                                    CommandParameter="{Binding ElementName=xRightButton, Path=Content}"
                                    Grid.Column="2"
                                    x:Name="xRightButton"
                                    Margin="4,8,4,0"
                                    Width="150" />

                        </Grid>

                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
