<UserControl x:Class="StatsClient.MVVM.View.UserPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:StatsClient.MVVM.View"
             xmlns:core="clr-namespace:StatsClient.MVVM.Core"
             xmlns:converter="clr-namespace:StatsClient.MVVM.Converters"
             xmlns:viewmodel="clr-namespace:StatsClient.MVVM.ViewModel"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="900">

    <UserControl.DataContext>
        <viewmodel:UserPanelViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/LvItemModern.xaml" />
                <ResourceDictionary Source="/Themes/ScrollBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converter:RemoveFirstCharFromStringIfItsZConverter x:Key="RemoveFirstCharFromStringIfItsZConverter" />
            <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converter:BoolToInverseVisibilityConverter x:Key="BoolToInverseVisibilityConverter" />
            <converter:ZeroToCollapsedVisibilityConverter x:Key="ZeroToCollapsedVisibilityConverter" />

            <Style x:Key="lvHeaderStyle"
                   TargetType="{x:Type GridViewColumnHeader}">
                <Setter Property="Background"
                        Value="WhiteSmoke" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Left" />
                <Setter Property="BorderThickness"
                        Value="0,0,0,0" />
                <Setter Property="IsHitTestVisible"
                        Value="False" />
                <Setter Property="Margin"
                        Value="-3,0,-3,0" />
            </Style>

            <DataTemplate x:Key="lvHeaderTemplate">
                <DockPanel HorizontalAlignment="Left"
                           LastChildFill="False">
                    <TextBlock FontSize="11"
                               Foreground="Black"
                               FontWeight="Normal"
                               Padding="8,0,0,0"
                               Width="{TemplateBinding Width}"
                               HorizontalAlignment="Left">
                        <TextBlock.Text>
                            <Binding />
                        </TextBlock.Text>
                    </TextBlock>
                </DockPanel>
            </DataTemplate>

            <DataTemplate x:Key="CrownsHeaderTemplate">
                <Image Source="/Images/SentOutCases/crown.png"
                       Width="17"
                       Height="17"
                       Margin="19,0,6,0" />
            </DataTemplate>

            <DataTemplate x:Key="AbutmentsHeaderTemplate">
                <Image Source="/Images/SentOutCases/abutment.png"
                       Width="17"
                       Height="17"
                       Margin="18,0,6,0" />
            </DataTemplate>

            <DataTemplate x:Key="ModelsHeaderTemplate">
                <Image Source="/Images/SentOutCases/i32.png"
                       Width="17"
                       Height="17"
                       Margin="10,0,6,0" />
            </DataTemplate>
           
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="2,0,2,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="66" />
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="23" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Grid.Column="1"
                BorderThickness="1"
                Margin="0,4,0,0"
                BorderBrush="#BBB">
            <Border.Background>
                <RadialGradientBrush GradientOrigin="0.5,0.5"
                                     Center="0.5,0.5">
                    <RadialGradientBrush.GradientStops>
                        <GradientStop Offset="0.0"
                                      Color="#999FBF" />
                        <GradientStop Offset="0.35"
                                      Color="#86897F" />
                        <GradientStop Offset="0.9"
                                      Color="#88898F" />
                        <GradientStop Offset="1"
                                      Color="#88898F" />
                    </RadialGradientBrush.GradientStops>
                </RadialGradientBrush>
            </Border.Background>

            <Grid ClipToBounds="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="0.75*" />
                    <ColumnDefinition Width="0.75*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.75*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                
                <Image Source="/Images/SentOutCases/models.png"
                       Width="50"
                       Height="50"
                       Opacity="0.7"
                       Grid.Column="0"
                       Grid.RowSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding TotalUnitsFinal, Converter={StaticResource ZeroToCollapsedVisibilityConverter}}"
                       Margin="-65,0,0,0" />


                <core:OutlinedTextBlock Text="{Binding TotalUnitsFinal}"
                                        Grid.Column="0"
                                        Stroke="#333"
                                        StrokePosition="Outside"
                                        FontSize="40"
                                        FontWeight="SemiBold"
                                        Fill="Yellow"
                                        StrokeThickness="1"
                                        HorizontalAlignment="Center"
                                        Visibility="{Binding TotalUnitsFinal, Converter={StaticResource ZeroToCollapsedVisibilityConverter}}"
                                        Margin="3,-8,3,0" />
                <d:Label Grid.Column="0"
                         Content="13"
                         Foreground="Yellow"
                         FontSize="40"
                         HorizontalAlignment="Center"
                         Margin="3,-8,3,-8" />
                <Label Content="Total Units"
                       Grid.Row="1"
                       Grid.Column="0"
                       Margin="0,-8,0,0"
                       FontSize="10"
                       Foreground="Yellow"
                       Visibility="{Binding TotalUnitsFinal, Converter={StaticResource ZeroToCollapsedVisibilityConverter}}"
                       HorizontalAlignment="Center" />


                <Image Source="/Images/SentOutCases/crown.png"
                       Width="40"
                       Height="40"
                       Opacity="0.7"
                       Grid.Column="1"
                       Grid.RowSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding TotalCrownsFinal, Converter={StaticResource ZeroToCollapsedVisibilityConverter}}"
                       Margin="-50,0,0,0" />
                <core:OutlinedTextBlock Text="{Binding TotalCrownsFinal}"
                                        Grid.Column="1"
                                        Stroke="#333"
                                        StrokePosition="Outside"
                                        FontSize="30"
                                        FontWeight="SemiBold"
                                        Fill="PaleTurquoise"
                                        HorizontalAlignment="Center"
                                        StrokeThickness="1"
                                        Visibility="{Binding TotalCrownsFinal, Converter={StaticResource ZeroToCollapsedVisibilityConverter}}"
                                        Margin="3" />
                <d:Label Grid.Column="1"
                         Content="13"
                         Foreground="PaleTurquoise"
                         FontSize="30"
                         HorizontalAlignment="Center"
                         Margin="3,-1,3,-8" />

                <Label Content="Crowns"
                       Grid.Row="1"
                       Grid.Column="1"
                       Margin="0,-8,0,0"
                       FontSize="10"
                       Foreground="PaleTurquoise"
                       Visibility="{Binding TotalCrownsFinal, Converter={StaticResource ZeroToCollapsedVisibilityConverter}}"
                       HorizontalAlignment="Center" />

                <Image Source="/Images/SentOutCases/abutment.png"
                       Width="40"
                       Height="40"
                       Opacity="0.7"
                       Grid.Column="2"
                       Grid.RowSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding TotalAbutmentsFinal, Converter={StaticResource ZeroToCollapsedVisibilityConverter}}"
                       Margin="-50,0,0,0" />
                <core:OutlinedTextBlock Text="{Binding TotalAbutmentsFinal}"
                                        Grid.Column="2"
                                        Stroke="#333"
                                        StrokePosition="Outside"
                                        FontSize="30"
                                        FontWeight="SemiBold"
                                        Fill="PaleVioletRed"
                                        StrokeThickness="1"
                                        HorizontalAlignment="Center"
                                        Visibility="{Binding TotalAbutmentsFinal, Converter={StaticResource ZeroToCollapsedVisibilityConverter}}"
                                        Margin="3" />
                <d:Label Grid.Column="2"
                         Content="13"
                         Foreground="PaleVioletRed"
                         FontSize="30"
                         HorizontalAlignment="Center"
                         Margin="3,-1,3,-8" />

                <Label Content="Abutments"
                       Grid.Row="1"
                       Grid.Column="2"
                       Margin="0,-8,0,0"
                       FontSize="10"
                       Foreground="Pink"
                       Visibility="{Binding TotalAbutmentsFinal, Converter={StaticResource ZeroToCollapsedVisibilityConverter}}"
                       HorizontalAlignment="Center" />

                <Image Source="/Images/SentOutCases/i33.png"
                       Width="50"
                       Height="50"
                       Opacity="0.7"
                       Grid.Column="3"
                       Grid.RowSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="-65,0,0,0" />
                <core:OutlinedTextBlock Text="{Binding TotalOrdersFinal}"
                                        Grid.Column="3"
                                        Stroke="#333"
                                        StrokePosition="Outside"
                                        FontSize="40"
                                        FontWeight="SemiBold"
                                        Fill="LightGreen"
                                        StrokeThickness="1"
                                        HorizontalAlignment="Center"
                                        Margin="3,-8,3,0" />
                <d:Label Grid.Column="3"
                         Content="13"
                         Foreground="LightGreen"
                         FontSize="40"
                         HorizontalAlignment="Center"
                         Margin="3,-10,3,-8" />

                <Label Content="All Cases"
                       Grid.Row="1"
                       Grid.Column="3"
                       Margin="0,-8,0,0"
                       FontSize="10"
                       Foreground="LightGreen"
                       HorizontalAlignment="Center" />


                <Label Content="Leftover Units"
                       Grid.Row="0"
                       Grid.Column="4"
                       Margin="0,-6,0,0"
                       FontSize="9"
                       Foreground="Pink"
                       Visibility="{Binding TotalUnitsTodaySameAsAllTimeTotal}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />

                <Grid Grid.Column="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>


                    <StackPanel Orientation="Horizontal"
                                Margin="4,7,-2,-8"
                                Visibility="{Binding TotalUnitsTodaySameAsAllTimeTotal}">
                        <Image Source="/Images/SentOutCases/models.png"
                               Width="14"
                               Height="14"
                               Opacity="0.8"
                               Margin="0,0,2,0"
                               VerticalAlignment="Center" />
                        <core:OutlinedTextBlock Text="{Binding TotalUnitsLeftOverFinal}"
                                                Grid.Column="0"
                                                Grid.Row="0"
                                                Stroke="#333"
                                                StrokePosition="Outside"
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Fill="Salmon"
                                                StrokeThickness="1"
                                                HorizontalAlignment="Left" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Grid.Column="0"
                                Grid.Row="1"
                                Margin="4,2,-2,-8"
                                Visibility="{Binding TotalUnitsTodaySameAsAllTimeTotal}">
                        <Image Source="/Images/SentOutCases/models.png"
                               Width="14"
                               Height="14"
                               Opacity="0.8"
                               Margin="0,-5,2,0"
                               VerticalAlignment="Center" />
                        <core:OutlinedTextBlock Text="{Binding TotalUnitsTodayFinal}"
                                                Stroke="#333"
                                                StrokePosition="Outside"
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Fill="Yellow"
                                                StrokeThickness="1"
                                                HorizontalAlignment="Left" />
                    </StackPanel>

                    <d:Label Grid.Column="0"
                             Grid.Row="0"
                             Content="13"
                             Foreground="Salmon"
                             FontSize="16"
                             HorizontalAlignment="Left"
                             Margin="12,2,-2,-8" />
                    <d:Label Grid.Column="0"
                             Grid.Row="1"
                             Content="13"
                             Foreground="Yellow"
                             FontSize="16"
                             HorizontalAlignment="Left"
                             Margin="12,-1,3,-8" />
                </Grid>

                <Label Content="Total Units Today"
                       Grid.Row="1"
                       Grid.Column="4"
                       Margin="0,-7,2,0"
                       FontSize="9"
                       Foreground="Yellow"
                       Visibility="{Binding TotalUnitsTodaySameAsAllTimeTotal}"
                       HorizontalAlignment="Left" />


                <Label Content="Leftover Cases"
                       Grid.Row="0"
                       Grid.Column="5"
                       Margin="0,-6,0,0"
                       FontSize="9"
                       Foreground="Pink"
                       Visibility="{Binding TotalUnitsTodaySameAsAllTimeTotal}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />

                <Grid Grid.Column="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>


                    <StackPanel Orientation="Horizontal"
                                Grid.Column="0"
                                Grid.Row="0"
                                Visibility="{Binding TotalUnitsTodaySameAsAllTimeTotal}"
                                Margin="4,7,-2,-8">
                        <Image Source="/Images/SentOutCases/i33.png"
                               Width="16"
                               Height="16"
                               Opacity="0.8"
                               Margin="0,0,2,0"
                               VerticalAlignment="Center" />
                        <core:OutlinedTextBlock Text="{Binding TotalOrdersLeftOversFinal}"
                                                Stroke="#333"
                                                StrokePosition="Outside"
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Fill="Salmon"
                                                StrokeThickness="1"
                                                HorizontalAlignment="Left" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Grid.Column="0"
                                Grid.Row="1"
                                Visibility="{Binding TotalUnitsTodaySameAsAllTimeTotal}"
                                Margin="4,2,2,-8">
                        <Image Source="/Images/SentOutCases/i33.png"
                               Width="16"
                               Height="16"
                               Opacity="0.8"
                               Margin="0,-5,2,0"
                               VerticalAlignment="Center" />
                        <core:OutlinedTextBlock Text="{Binding TotalOrdersTodayFinal}"
                                                Stroke="#333"
                                                StrokePosition="Outside"
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Fill="Yellow"
                                                StrokeThickness="1"
                                                HorizontalAlignment="Left" />
                    </StackPanel>

                    <d:Label Grid.Column="0"
                             Grid.Row="0"
                             Content="13"
                             Foreground="Salmon"
                             FontSize="16"
                             HorizontalAlignment="Left"
                             Margin="15,2,-2,-8" />
                    <d:Label Grid.Column="0"
                             Grid.Row="1"
                             Content="13"
                             Foreground="Yellow"
                             FontSize="16"
                             HorizontalAlignment="Left"
                             Margin="15,-2,3,-8" />
                </Grid>


                <Label Content="New Cases Today"
                       Grid.Row="1"
                       Grid.Column="5"
                       Margin="0,-7,2,0"
                       FontSize="9"
                       Foreground="Yellow"
                       Visibility="{Binding TotalOrdersTodaySameAsAllTimeTotal}"
                       HorizontalAlignment="Left" />


            </Grid>
        </Border>


        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Margin="0,4,0,3"
                    VerticalAlignment="Center"
                    Background="Bisque">
            <TextBlock Text="Designer:" 
                       FontWeight="Thin"
                       FontSize="9"
                       Foreground="Black"
                       VerticalAlignment="Center"
                       Margin="4,0,4,0"/>
            <TextBlock Text="{Binding DesignerName}" 
                       d:Text="Designer Name"
                       Foreground="DarkGreen"
                       VerticalAlignment="Center"
                       Margin="0,-1,0,0"
                       FontSize="13"/>
        </StackPanel>

        <Grid Grid.Row="2"
              Background="Black">
            
            <core:OutlinedTextBlock Text="{Binding DesignerName}"
                                    Grid.Column="3"
                                    Stroke="#000"
                                    StrokePosition="Outside"
                                    FontSize="60"
                                    FontWeight="SemiBold"
                                    Fill="DarkGreen"
                                    Panel.ZIndex="2"
                                    StrokeThickness="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="3,-10,3,0" />
            <d:Label Grid.Column="3"
                     Content="Designer Name"
                     FontWeight="SemiBold"
                     Foreground="DarkGreen"
                     FontSize="60"
                     Panel.ZIndex="2"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="4,-22,-2,-8" />
        </Grid>

        <ListView ItemsSource="{Binding SentOutCasesModelFinal}"
                  ItemContainerStyle="{StaticResource LvItemSentOutCases}"
                  x:Name="listView"
                  AlternationCount="2"
                  Grid.Row="2"
                  Panel.ZIndex="2"
                  BorderBrush="Black"
                  Opacity="0.94"
                  SizeChanged="ListViewLeft_SizeChanged">
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Left" />
                    <Setter Property="IsEnabled"
                            Value="True" />

                </Style>
            </ListView.Resources>

            <ListView.View>

                <GridView AllowsColumnReorder="False"
                          ColumnHeaderTemplate="{StaticResource lvHeaderTemplate}"
                          ColumnHeaderContainerStyle="{StaticResource lvHeaderStyle}">
                    <GridViewColumn x:Name="headerIcon"
                                    Width="34"
                                    DisplayMemberBinding="{Binding IconImage}" />
                    <GridViewColumn x:Name="headerCaseID"
                                    Width="400"
                                    Header="Case ID"
                                    DisplayMemberBinding="{Binding OrderID}" />
                    <GridViewColumn x:Name="headerCrowns"
                                    Width="45"
                                    HeaderTemplate="{StaticResource CrownsHeaderTemplate}"
                                    DisplayMemberBinding="{Binding Crowns}" />
                    <GridViewColumn x:Name="headerAbutments"
                                    Width="44"
                                    HeaderTemplate="{StaticResource AbutmentsHeaderTemplate}"
                                    DisplayMemberBinding="{Binding Abutments}" />
                    <GridViewColumn x:Name="headerModels"
                                    Width="30"
                                    HeaderTemplate="{StaticResource ModelsHeaderTemplate}"
                                    DisplayMemberBinding="{Binding Models}" />
                    <GridViewColumn x:Name="headerSentOn"
                                    Width="110"
                                    Header="         Sent On"
                                    DisplayMemberBinding="{Binding SentOn}" />

                </GridView>

            </ListView.View>

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Expander IsExpanded="True"
                                                  Margin="0,0,0,30"
                                                  Loaded="ExpanderLeft_Loaded"
                                                  Collapsed="ExpanderLeft_ExpandedCollapsed"
                                                  Expanded="ExpanderLeft_ExpandedCollapsed">
                                            <Expander.Header>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto" />
                                                        <ColumnDefinition Width="auto" />
                                                        <ColumnDefinition Width="auto" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="{Binding Name, Converter={StaticResource RemoveFirstCharFromStringIfItsZConverter}}"
                                                               FontWeight="Bold"
                                                               Foreground="Gray"
                                                               FontSize="18"
                                                               VerticalAlignment="Bottom"
                                                               Grid.Column="0" />

                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Right"
                                                                Grid.Column="2">

                                                        <TextBlock Text="{Binding ItemCount}"
                                                                   FontSize="16"
                                                                   Foreground="Green"
                                                                   FontWeight="Bold"
                                                                   FontStyle="Italic"
                                                                   Margin="10,0,0,0"
                                                                   VerticalAlignment="Bottom"
                                                                   HorizontalAlignment="Right" />

                                                        <TextBlock Text="cases"
                                                                   FontSize="16"
                                                                   Padding="5,0,0,0"
                                                                   Foreground="Silver"
                                                                   FontStyle="Italic"
                                                                   VerticalAlignment="Bottom"
                                                                   HorizontalAlignment="Right" />
                                                    </StackPanel>

                                                </Grid>
                                            </Expander.Header>
                                            <ItemsPresenter />
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>

        <Border BorderBrush="BlanchedAlmond"
                Margin="0,0,0,3"
                Background="OldLace"
                BorderThickness="1"
                Grid.Row="3">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                
                <TextBlock Text="SEARCH"
                           Foreground="#888"
                           FontSize="10"
                           FontWeight="SemiBold"
                           Padding="7,0"
                           VerticalAlignment="Center" />

                <TextBox Text="{Binding Search, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Column="1"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="4,0,0,0">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="KeyDown">
                            <i:InvokeCommandAction Command="{Binding FilterCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>

                <TextBlock Text="╳"
                           Grid.Column="2"
                           Foreground="Maroon"
                           FontSize="10"
                           FontWeight="SemiBold"
                           Padding="10,0"
                           Margin="0,-2,0,0"
                           Cursor="Hand"
                           Visibility="{Binding Search, Converter={StaticResource TextToVisibilityConverter}}"
                           VerticalAlignment="Center">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding ClearFilterCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                </TextBlock>
            </Grid>
        </Border>

    </Grid>
</UserControl>
